// Minimal Expense Splitter Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Direct relations
  expenses      Expense[]      @relation("UserExpenses")
  groupMembers  GroupMember[]
  ExpenseSplit  ExpenseSplit[]
  createdGroups Group[]        @relation("CreatedGroups")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  createdBy Int
  createdAt DateTime @default(now())

  // Relations
  createdByUser User          @relation("CreatedGroups", fields: [createdBy], references: [id])
  members       GroupMember[]
  expenses      Expense[]
}

model GroupMember {
  id      Int @id @default(autoincrement())
  groupId Int
  userId  Int

  group Group @relation(fields: [groupId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
  @@index([userId])
}

model Expense {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Float
  type      String
  date      DateTime
  paidBy    Int
  groupId   Int?
  createdAt DateTime @default(now())

  splits ExpenseSplit[]
  user   User           @relation("UserExpenses", fields: [paidBy], references: [id])
  group  Group?         @relation(fields: [groupId], references: [id])

  @@index([paidBy])
  @@index([groupId])
}

model ExpenseSplit {
  id          Int   @id @default(autoincrement())
  expenseId   Int
  userId      Int
  shareAmount Float

  expense Expense @relation(fields: [expenseId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([expenseId, userId])
  @@index([userId])
}
